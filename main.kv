#:set blancoColor (1,1,1,1)
#:set negroColor (0,0,0,1)
#:set transparente (0,0,0,0)

<BotonRedondo@Button>:
    canvas.before:
        Color:
            rgba: blancoColor
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
    color: negro
    #font_name: textFont
    background_color: transparente
    color: negroColor


<MenuScreen>:
    canvas.before:
        Color:
            rgba: negroColor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing:root.width/25
        padding:root.width/3,root.width/15,root.width/3,root.width/15
        orientation:"vertical"
        Label:
            text:"Template-App"
            font_size:(root.width/15+root.height/15)/2
            color: blancoColor
            #font_name: textFont
        BotonRedondo:
            text: "App"
            color: negroColor
            #font_name: textFont
            on_press:
                root.manager.current = 'app'
        BotonRedondo:
            text: 'Ajustes'
            color: negroColor
            #font_name: textFont
            on_press:
                root.manager.current = 'ajustes'
        BotonRedondo:
            text: 'Salir'
            color: negroColor
            #font_name: textFont
            on_press: quit()

<Ajustes>:
    canvas.before:
        Color:
            rgba: negroColor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing:root.width/30
        padding:root.width/8,root.height/30,root.width/8,root.height/8
        orientation:"vertical"
        Label:
            text:"Ajustes"
            font_size:(root.width/15+root.height/15)/2
            #font_name: textFont
            color: negroColor
        BoxLayout:
            orientation:"horizontal"
            spacing:root.width/30
            BotonRedondo:
                font_size:(root.width/15+root.height/15)/3
                text: 'Boton De Prueba'
                color: negroColor
                #font_name: textFont
                on_press:
            Button:
                text: 'Boton De Prueba'
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                on_press:
                text_size: self.width, None
                halign: 'center'
        BoxLayout:
            padding:root.width/8,0,root.width/8,0
            BotonRedondo:
                id: botonSonido
                text: "Configuration Example"
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                #font_name: textFont
                on_press:
        BoxLayout:
            padding:root.width/8,0,root.width/8,0
            BotonRedondo:
                text: 'Volver al Menu'
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                #font_name: textFont
                on_press:
                    root.manager.current = 'menu'
