#:set blancoColor (1,1,1,1)
#:set negroColor (0,0,0,1)
#:set transparente (0,0,0,0)

<BotonRedondo>:
    canvas.before:
        Color:
            rgba: self.color_fondo
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
    color: self.color_texto
    background_color: 1, 1, 1, 0  # Transparente para el fondo del bot√≥n

#Este boton, por defecto crea un boton blanco sobre negro
#sin embargo se puede personalizar con las siguientes especidicaciones:
#BotonRedondo:
#   text: "Spin"
#   color_fondo: 1, 0, 0, 1  # Rojo
#   color_texto: 1, 1, 1, 1  # Blanco 


<MenuScreen>:
    canvas.before:
        Color:
            rgba: negroColor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing:root.height/15
        padding:root.width/3,root.height/10,root.width/3,root.height/5
        orientation:"vertical"
        Label:
            text:"Template-App"
            font_size:(root.width/15+root.height/15)/2
            color: blancoColor
            #font_name: textFont
        BotonRedondo:
            text: "App"
            #font_name: textFont
            on_press:
                root.manager.current = 'app'
        BotonRedondo:
            text: 'Ajustes'
            #font_name: textFont
            on_press:
                root.manager.current = 'ajustes'
        BotonRedondo:
            text: 'Salir'
            #font_name: textFont
            on_press: quit()

<Ajustes>:
    canvas.before:
        Color:
            rgba: negroColor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing:root.width/30
        padding:root.width/8,root.height/30,root.width/8,root.height/8
        orientation:"vertical"
        Label:
            text:"Ajustes"
            font_size:(root.width/15+root.height/15)/2
            #font_name: textFont
            color: negroColor
        BoxLayout:
            orientation:"horizontal"
            spacing:root.width/30
            BotonRedondo:
                font_size:(root.width/15+root.height/15)/3
                text: 'Boton De Prueba'
                color: negroColor
                #font_name: textFont
                on_press:
            Button:
                text: 'Boton De Prueba'
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                on_press:
                text_size: self.width, None
                halign: 'center'
        BoxLayout:
            padding:root.width/8,0,root.width/8,0
            BotonRedondo:
                id: botonSonido
                text: "Configuration Example"
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                #font_name: textFont
                on_press:
        BoxLayout:
            padding:root.width/8,0,root.width/8,0
            BotonRedondo:
                text: 'Volver al Menu'
                font_size:(root.width/15+root.height/15)/3
                color: negroColor
                #font_name: textFont
                on_press:
                    root.manager.current = 'menu'
